<Window x:Class="ProjectReport.Views.Geometry.BitAndJets.BitJetsConfigWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Configure Jets"
        Height="600"
        Width="700"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        Background="{DynamicResource AppBackground}"
        FocusManager.IsFocusScope="True">

    <Window.Resources>
        <!-- TextBox estable, centrado y consistente -->
        <Style x:Key="CenteredTextBox" TargetType="TextBox">
            <Setter Property="Padding" Value="12,0"/>
            <Setter Property="MinHeight" Value="40"/>
            <Setter Property="BorderBrush" Value="{StaticResource TableBorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="{StaticResource WhiteBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource BlackBrush}"/>
            <Setter Property="CaretBrush" Value="{StaticResource BlackBrush}"/>
            <Setter Property="SelectionBrush" Value="{StaticResource OrangeBrush}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10"
                                SnapsToDevicePixels="True">
                            <ScrollViewer x:Name="PART_ContentHost"
                                          Margin="{TemplateBinding Padding}"
                                          VerticalContentAlignment="{TemplateBinding VerticalContentAlignment}"
                                          HorizontalScrollBarVisibility="Hidden"
                                          VerticalScrollBarVisibility="Hidden"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="{StaticResource OrangeBrush}"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="BorderBrush" Value="{StaticResource OrangeBrush}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Labels -->
        <Style x:Key="FieldLabel" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{DynamicResource AppSecondaryText}"/>
            <Setter Property="Margin" Value="0,0,0,6"/>
        </Style>

        <!-- Card container -->
        <Style x:Key="Card" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource AppCardBackground}"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="BorderBrush" Value="{StaticResource TableBorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
    </Window.Resources>

    <Grid Margin="26">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,14">
            <TextBlock Text="Configure Jets"
                       FontSize="22"
                       FontWeight="SemiBold"
                       Foreground="{DynamicResource AppPrimaryText}"/>
            <TextBlock Text="Enter jet count and sizes. TFA is used for hydraulics calculations."
                       Margin="0,6,0,0"
                       Foreground="{DynamicResource AppSecondaryText}"/>
        </StackPanel>

        <!-- Body -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="0,0,0,14">

                <!-- Header: TFA Total -->
                <Border Background="{DynamicResource AppCardBackground}"
                        CornerRadius="12"
                        Padding="16"
                        BorderBrush="{StaticResource TableBorderBrush}"
                        BorderThickness="1"
                        Margin="0,0,0,14">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="Total Flow Area (TFA)"
                                       Foreground="{DynamicResource AppSecondaryText}"
                                       FontSize="14"/>
                            <TextBlock Text="{Binding TfaTotal, StringFormat='{}{0:F3} in²'}"
                                       FontSize="28"
                                       FontWeight="Bold"
                                       Foreground="{DynamicResource AppAccent}"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1" 
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Right"
                                   Margin="20,0,0,0">
                            <Button Content="Add Jet Set"
                                   Command="{Binding AddSetCommand}"
                                   Width="140" Height="38"
                                   Style="{StaticResource PrimaryButton}"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Jet Sets List -->
                <Border Background="{DynamicResource AppCardBackground}"
                        CornerRadius="12"
                        Padding="0"
                        BorderBrush="{StaticResource TableBorderBrush}"
                        BorderThickness="1">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Column Headers -->
                        <Border Grid.Row="0"
                                Background="#0D000000"
                                Padding="16,12"
                                BorderBrush="{StaticResource TableBorderBrush}"
                                BorderThickness="0,0,0,1">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="60"/>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="180"/>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="50"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Text="Set#" 
                                          FontWeight="SemiBold"
                                          Foreground="{DynamicResource AppSecondaryText}"/>
                                <TextBlock Grid.Column="1" Text="Jet Count" 
                                          FontWeight="SemiBold"
                                          Foreground="{DynamicResource AppSecondaryText}"/>
                                <TextBlock Grid.Column="2" Text="Diameter (32nds)" 
                                          FontWeight="SemiBold"
                                          Foreground="{DynamicResource AppSecondaryText}"/>
                                <TextBlock Grid.Column="3" Text="TFA (in²)" 
                                          FontWeight="SemiBold"
                                          Foreground="{DynamicResource AppSecondaryText}"/>
                                <TextBlock Grid.Column="4"/>
                            </Grid>
                        </Border>

                        <!-- Jet Sets Rows -->
                        <ItemsControl Grid.Row="1" ItemsSource="{Binding JetSets}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Padding="16,12"
                                           BorderBrush="{StaticResource TableBorderBrush}"
                                           BorderThickness="0,0,0,1">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="60"/>
                                                <ColumnDefinition Width="120"/>
                                                <ColumnDefinition Width="180"/>
                                                <ColumnDefinition Width="100"/>
                                                <ColumnDefinition Width="50"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- Set ID (read-only) -->
                                            <TextBlock Text="{Binding Id}"
                                                      VerticalAlignment="Center"
                                                      FontWeight="SemiBold"/>

                                            <!-- Jet Count Input -->
                                            <TextBox Grid.Column="1"
                                                    Text="{Binding NumberOfJets, Mode=TwoWay, UpdateSourceTrigger=LostFocus, TargetNullValue='', FallbackValue=''}"
                                                    Padding="8,4"
                                                    Style="{StaticResource CenteredTextBox}"/>

                                            <!-- Diameter Input -->
                                            <TextBox Grid.Column="2"
                                                    Text="{Binding JetDiameter32nds, Mode=TwoWay, UpdateSourceTrigger=LostFocus, TargetNullValue='', FallbackValue=''}"
                                                    Padding="8,4"
                                                    Style="{StaticResource CenteredTextBox}"/>

                                            <!-- TFA (calculated, read-only) -->
                                            <TextBlock Grid.Column="3"
                                                      Text="{Binding TFACalculated, StringFormat='{}{0:F3}'}"
                                                      VerticalAlignment="Center"
                                                      Foreground="{DynamicResource AppAccent}"
                                                      FontWeight="Bold"/>

                                            <!-- Delete Button -->
                                            <Button Grid.Column="4"
                                                   Content="✕"
                                                   Width="32" Height="32"
                                                   Command="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=DataContext.RemoveSetCommand}"
                                                   CommandParameter="{Binding}"
                                                   HorizontalAlignment="Right"
                                                   VerticalAlignment="Center"
                                                   Padding="0"
                                                   FontSize="16"
                                                   Foreground="Red"
                                                   Style="{StaticResource DefaultButton}"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <!-- Empty State -->
                        <TextBlock Grid.Row="1"
                                  Text="No jet sets configured. Click 'Add Jet Set' to begin."
                                  Padding="16,40"
                                  Foreground="{DynamicResource AppSecondaryText}"
                                  TextAlignment="Center"
                                  FontStyle="Italic">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding JetSets.Count}" Value="0">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding JetSets.Count}" Value="-1">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </Grid>
                </Border>

            </StackPanel>
        </ScrollViewer>

        <!-- Footer -->
        <Border Grid.Row="2" Background="Transparent" Margin="0,14,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           Text="Tip: use '.' for decimals."
                           Foreground="{DynamicResource AppSecondaryText}"
                           VerticalAlignment="Center"/>

                <StackPanel Grid.Column="1"
                            Orientation="Horizontal"
                            HorizontalAlignment="Right">
                    <Button Content="Cancel"
                            Width="110" Height="38"
                            Command="{Binding CancelCommand}"
                            Margin="0,0,12,0"
                            Style="{StaticResource DefaultButton}"/>
                    <Button Content="Save"
                            Width="110" Height="38"
                            Command="{Binding SaveCommand}"
                            Style="{StaticResource PrimaryButton}"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
