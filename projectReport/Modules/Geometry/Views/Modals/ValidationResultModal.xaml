<Window x:Class="ProjectReport.Views.Modals.ValidationResultModal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Wellbore Geometry - Validation Report" Height="600" Width="850"
        WindowStartupLocation="CenterOwner" ResizeMode="CanResize" MinHeight="450" MinWidth="700">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <Style TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe UI"/>
        </Style>
    </Window.Resources>
    
    <Border Background="#F5F5F5" BorderBrush="#E0E0E0" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/> <!-- Header with stats -->
                <RowDefinition Height="Auto"/> <!-- Subtitle -->
                <RowDefinition Height="*"/>    <!-- Content -->
                <RowDefinition Height="Auto"/> <!-- Footer -->
            </Grid.RowDefinitions>

            <!-- Header with Summary Statistics -->
            <Border Grid.Row="0" Background="White" Padding="20,15" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Wellbore Geometry Validation Report" FontSize="18" FontWeight="Bold" Foreground="#333"/>
                        <TextBlock Text="Sierra Alta Project Report Manager" FontSize="12" Foreground="#666" Margin="0,3,0,0"/>
                    </StackPanel>
                    
                    <!-- Summary Cards -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                        <!-- Errors Card -->
                        <Border Background="#FFEBEE" BorderBrush="#EF5350" BorderThickness="2" CornerRadius="6" Padding="12,8" Margin="0,0,10,0">
                            <StackPanel>
                                <TextBlock Text="{Binding ErrorCount}" FontSize="24" FontWeight="Bold" Foreground="#C62828" HorizontalAlignment="Center"/>
                                <TextBlock Text="Critical Errors" FontSize="11" Foreground="#C62828" HorizontalAlignment="Center" Margin="0,2,0,0"/>
                                <TextBlock Text="ðŸ”´ Blocks saving" FontSize="9" Foreground="#D32F2F" HorizontalAlignment="Center" Margin="0,2,0,0"/>
                            </StackPanel>
                        </Border>
                        
                        <!-- Warnings Card -->
                        <Border Background="#FFF3E0" BorderBrush="#FFB74D" BorderThickness="2" CornerRadius="6" Padding="12,8">
                            <StackPanel>
                                <TextBlock Text="{Binding WarningCount}" FontSize="24" FontWeight="Bold" Foreground="#E65100" HorizontalAlignment="Center"/>
                                <TextBlock Text="Warnings" FontSize="11" Foreground="#E65100" HorizontalAlignment="Center" Margin="0,2,0,0"/>
                                <TextBlock Text="ðŸŸ¡ Can save" FontSize="9" Foreground="#F57C00" HorizontalAlignment="Center" Margin="0,2,0,0"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Subtitle -->
            <Border Grid.Row="1" Background="#FFF9E6" Padding="15,12" BorderBrush="#FFE082" BorderThickness="0,0,0,1">
                <TextBlock TextWrapping="Wrap" FontSize="13" Foreground="#555">
                    <Run Text="âš ï¸ " FontWeight="Bold"/>
                    <Run Text="Critical errors (in red) must be fixed before saving. Warnings (in orange) can be accepted with confirmation."/>
                </TextBlock>
            </Border>

            <!-- Content -->
            <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" Padding="20" Background="White">
                <StackPanel>
                    <ItemsControl ItemsSource="{Binding GroupedItems}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#FAFAFA" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="6" Padding="15" Margin="0,0,0,12">
                                    <StackPanel>
                                        <!-- Section Header -->
                                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                            <TextBlock Text="{Binding Icon}" FontSize="16" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                            <TextBlock Text="{Binding SectionName}" FontSize="14" FontWeight="SemiBold" Foreground="#1976D2" VerticalAlignment="Center"/>
                                        </StackPanel>
                                        
                                        <!-- Error/Warning Items -->
                                        <ItemsControl ItemsSource="{Binding Items}">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Border Background="White" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="4" Padding="10,8" Margin="0,0,0,6">
                                                        <StackPanel Orientation="Horizontal">
                                                            <Ellipse Width="8" Height="8" Fill="{Binding SeverityColor}" VerticalAlignment="Top" Margin="0,4,10,0"/>
                                                            <TextBlock Text="{Binding Message}" Foreground="#333" TextWrapping="Wrap" FontSize="13" LineHeight="18"/>
                                                        </StackPanel>
                                                    </Border>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </ScrollViewer>

            <!-- Footer -->
            <Border Grid.Row="3" Background="#F5F5F5" Padding="15" BorderBrush="#E0E0E0" BorderThickness="0,1,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Copy Button on Left -->
                    <Button Grid.Column="0" Content="ðŸ“‹ Copy Report to Clipboard" Width="200" Height="32" 
                            HorizontalAlignment="Left" Click="CopyReport_Click"
                            Background="White" BorderBrush="#2196F3" BorderThickness="1" Foreground="#2196F3"
                            FontWeight="SemiBold" Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" 
                                                    BorderBrush="{TemplateBinding BorderBrush}" 
                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                    CornerRadius="4" Padding="10,6">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#E3F2FD"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    
                    <!-- Action Buttons on Right -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                        <!-- Continue Button (Visible only if no Errors but has Warnings) -->
                        <Button Content="âœ“ Save with Warnings" Width="150" Height="32" Margin="0,0,10,0" 
                                Click="Continue_Click" FontWeight="SemiBold"
                                Visibility="{Binding CanContinue, Converter={StaticResource BoolToVis}}"
                                Background="#FF9800" Foreground="White" BorderThickness="0" Cursor="Hand">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" CornerRadius="4" Padding="10,6">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#FB8C00"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                                
                        <Button Content="Close" Width="100" Height="32" IsDefault="True" Click="OK_Click"
                                Background="#757575" Foreground="White" BorderThickness="0" FontWeight="SemiBold" Cursor="Hand">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" CornerRadius="4" Padding="10,6">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#616161"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
