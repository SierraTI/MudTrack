<UserControl x:Class="ProjectReport.Views.Geometry.ThermalGradientView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="1000"
             Background="#F7F8FA">

    <UserControl.Resources>

        <!-- ===== Converters ===== -->
        <BooleanToVisibilityConverter x:Key="BoolToVisibility"/>

        <!-- Inverse bool->visibility (local, no code-behind needed) -->
        <Style x:Key="HiddenWhenTrue" TargetType="FrameworkElement">
            <Setter Property="Visibility" Value="Visible"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding ShowChart}" Value="True">
                    <Setter Property="Visibility" Value="Collapsed"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ShownWhenTrue" TargetType="FrameworkElement">
            <Setter Property="Visibility" Value="Collapsed"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding ShowChart}" Value="True">
                    <Setter Property="Visibility" Value="Visible"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <!-- ===== Palette (Project consistent) ===== -->
        <SolidColorBrush x:Key="AccentBrush" Color="#F97316"/>
        <SolidColorBrush x:Key="AccentBrushDark" Color="#EA580C"/>
        <SolidColorBrush x:Key="SurfaceBrush" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="PageBgBrush" Color="#F7F8FA"/>
        <SolidColorBrush x:Key="BorderBrushSoft" Color="#E6E8EB"/>
        <SolidColorBrush x:Key="BorderBrushInput" Color="#D1D5DB"/>
        <SolidColorBrush x:Key="TextPrimary" Color="#111827"/>
        <SolidColorBrush x:Key="TextSecondary" Color="#374151"/>
        <SolidColorBrush x:Key="TextMuted" Color="#6B7280"/>
        <SolidColorBrush x:Key="DangerBrush" Color="#DC2626"/>

        <!-- ===== Cards ===== -->
        <Style x:Key="Card" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource SurfaceBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrushSoft}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="14"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
        </Style>

        <Style x:Key="CardHeader" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{StaticResource TextSecondary}"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>

        <!-- ===== Buttons ===== -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Padding" Value="14,8"/>
            <Setter Property="MinHeight" Value="36"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Bd"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10"
                                SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="{StaticResource AccentBrushDark}"/>
                                <Setter TargetName="Bd" Property="BorderBrush" Value="{StaticResource AccentBrushDark}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Bd" Property="Opacity" Value="0.92"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Bd" Property="Opacity" Value="0.55"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="MinHeight" Value="36"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="Background" Value="#F3F4F6"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrushSoft}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Bd"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10"
                                SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#EDEFF2"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Bd" Property="Opacity" Value="0.92"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Bd" Property="Opacity" Value="0.55"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="DangerIconButton" TargetType="Button">
            <Setter Property="Width" Value="32"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Foreground" Value="{StaticResource DangerBrush}"/>
            <Setter Property="Background" Value="#FEF2F2"/>
            <Setter Property="BorderBrush" Value="#FECACA"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Bd"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10"
                                SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#FEE2E2"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Bd" Property="Opacity" Value="0.9"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Bd" Property="Opacity" Value="0.55"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ===== Metrics tile ===== -->
        <Style x:Key="MetricTile" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource SurfaceBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrushSoft}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
        </Style>

        <Style x:Key="MetricLabel" TargetType="TextBlock">
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Foreground" Value="{StaticResource TextMuted}"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,0,0,6"/>
        </Style>

        <Style x:Key="MetricValue" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Foreground" Value="{StaticResource AccentBrushDark}"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>

        <!-- ===== DataGrid Modern ===== -->
        <Style x:Key="ModernDataGrid" TargetType="DataGrid">
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="CanUserDeleteRows" Value="False"/>
            <Setter Property="CanUserReorderColumns" Value="False"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="RowHeaderWidth" Value="0"/>
            <Setter Property="Background" Value="{StaticResource SurfaceBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrushSoft}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="AlternatingRowBackground" Value="#FAFAFB"/>
            <Setter Property="RowBackground" Value="White"/>
            <Setter Property="ColumnHeaderHeight" Value="34"/>
            <Setter Property="RowHeight" Value="34"/>
        </Style>

        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#F9FAFB"/>
            <Setter Property="Foreground" Value="{StaticResource TextSecondary}"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrushSoft}"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="Padding" Value="10,0"/>
        </Style>

        <Style TargetType="DataGridCell">
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="BorderBrush" Value="#EEF0F3"/>
            <Setter Property="Padding" Value="10,0"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

    </UserControl.Resources>

    <Grid Margin="22">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Validation banner (clean, on-brand) -->
        <Border Grid.Row="0"
                Style="{StaticResource Card}"
                Background="#FFF7ED"
                BorderBrush="#FED7AA"
                Padding="14"
                Margin="0,0,0,14"
                Visibility="{Binding HasValidationError, Converter={StaticResource BoolToVisibility}}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Border Width="34" Height="34" CornerRadius="17"
                        Background="{StaticResource AccentBrush}"
                        VerticalAlignment="Center">
                    <TextBlock Text="!"
                               Foreground="White"
                               FontWeight="Bold"
                               FontSize="16"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                </Border>

                <StackPanel Grid.Column="1" Margin="12,0,0,0" VerticalAlignment="Center">
                    <TextBlock Text="Validation needs attention"
                               FontWeight="SemiBold"
                               Foreground="{StaticResource TextPrimary}"/>
                    <TextBlock Text="{Binding ValidationMessage}"
                               TextWrapping="Wrap"
                               Foreground="{StaticResource TextSecondary}"/>
                </StackPanel>

                <Button Grid.Column="2"
                        Content="Auto-Sort"
                        Command="{Binding AutoSortCommand}"
                        Style="{StaticResource PrimaryButton}"
                        Margin="12,0,0,0"/>
            </Grid>
        </Border>

        <!-- Top action bar -->
        <Border Grid.Row="1" Style="{StaticResource Card}" Margin="0,0,0,14">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Thermal Gradient Points"
                               FontSize="13"
                               FontWeight="SemiBold"
                               Foreground="{StaticResource TextSecondary}"
                               Margin="0,0,10,0"/>
                    <Border Background="#FFF7ED" BorderBrush="#FED7AA" BorderThickness="1" CornerRadius="10" Padding="10,4">
                        <TextBlock Text="{Binding DataPointsCount}" FontWeight="Bold" Foreground="{StaticResource AccentBrushDark}"/>
                    </Border>
                </StackPanel>

                <Button Grid.Column="1"
                        Content="Import from Survey"
                        Command="{Binding ImportFromSurveyCommand}"
                        Style="{StaticResource SecondaryButton}"
                        Margin="0,0,10,0"
                        ToolTip="Import TVD values from Survey data"/>

                <Button Grid.Column="2"
                        Content="Import Data"
                        Command="{Binding ImportDataCommand}"
                        Style="{StaticResource SecondaryButton}"
                        Margin="0,0,10,0"
                        ToolTip="Import from Excel/CSV (Ctrl+I)"/>

                <Button Grid.Column="3"
                        Content="Export"
                        Command="{Binding ExportDataCommand}"
                        Style="{StaticResource SecondaryButton}"
                        Margin="0,0,10,0"
                        ToolTip="Export to Excel/CSV/PDF"/>

                <Button Grid.Column="4"
                        Content="+ Add Thermal Point"
                        Command="{Binding AddPointCommand}"
                        Style="{StaticResource PrimaryButton}"
                        ToolTip="Add new thermal point (Ctrl+N)"/>
            </Grid>
        </Border>

        <!-- Main area -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.15*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Data Table -->
            <Border Grid.Column="0" Style="{StaticResource Card}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="Thermal Gradient Data" Style="{StaticResource CardHeader}"/>

                    <!-- BHT highlight -->
                    <Border Grid.Row="1"
                            Background="#FFF7ED"
                            BorderBrush="#FED7AA"
                            BorderThickness="1"
                            CornerRadius="12"
                            Padding="10"
                            Margin="0,0,0,12">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Bottom Hole Temperature (BHT)"
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource TextSecondary}"
                                       Margin="0,0,10,0"/>
                            <TextBlock Text="{Binding BottomHoleTemperature, StringFormat='{}{0:F1} Â°F'}"
                                       FontWeight="Bold"
                                       Foreground="{StaticResource AccentBrushDark}"/>
                        </StackPanel>
                    </Border>

                    <DataGrid Grid.Row="2"
                              x:Name="ThermalDataGrid"
                              ItemsSource="{Binding ThermalGradientPoints}"
                              Style="{StaticResource ModernDataGrid}"
                              SelectionMode="Single">

                        <DataGrid.RowStyle>
                            <Style TargetType="DataGridRow">
                                <Style.Triggers>
                                    <!-- Anomalous gradient highlighting -->
                                    <DataTrigger Binding="{Binding IsAnomalous}" Value="True">
                                        <Setter Property="Background" Value="#FFFFF4E6"/>
                                        <Setter Property="BorderBrush" Value="#FFFF9800"/>
                                        <Setter Property="BorderThickness" Value="1"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </DataGrid.RowStyle>

                        <DataGrid.Columns>

                            <!-- ID -->
                            <DataGridTextColumn Header="ID"
                                                Binding="{Binding Id}"
                                                Width="70"
                                                IsReadOnly="True">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Foreground" Value="{StaticResource TextMuted}"/>
                                        <Setter Property="FontStyle" Value="Italic"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <!-- TVD -->
                            <DataGridTextColumn Header="TVD (ft)"
                                                Binding="{Binding TVD, StringFormat=F2, UpdateSourceTrigger=PropertyChanged}"
                                                Width="120">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding HasValidationWarning}" Value="True">
                                                <Setter Property="Foreground" Value="#856404"/>
                                                <Setter Property="Background" Value="#FFF7ED"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <!-- Temperature -->
                            <DataGridTextColumn Header="Temperature (Â°F)"
                                                Binding="{Binding Temperature, StringFormat=F1, UpdateSourceTrigger=PropertyChanged}"
                                                Width="150">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding HasValidationWarning}" Value="True">
                                                <Setter Property="Foreground" Value="#856404"/>
                                                <Setter Property="Background" Value="#FFF7ED"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <!-- Label -->
                            <DataGridTextColumn Header="Label"
                                                Binding="{Binding Label, UpdateSourceTrigger=PropertyChanged}"
                                                Width="140">
                                <DataGridTextColumn.HeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="ToolTip" Value="Point label (e.g., Surface, Mudline, BHT)"/>
                                    </Style>
                                </DataGridTextColumn.HeaderStyle>
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                        <Setter Property="Foreground" Value="#6366F1"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <!-- Calculated Gradient (Read-Only) -->
                            <DataGridTextColumn Header="Gradient (Â°F/100ft)"
                                                Binding="{Binding CalculatedGradient, StringFormat=F2}"
                                                Width="160"
                                                IsReadOnly="True">
                                <DataGridTextColumn.HeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="ToolTip" Value="Calculated gradient to next point (AUTO-CALCULATED)"/>
                                    </Style>
                                </DataGridTextColumn.HeaderStyle>
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Background" Value="#FFF3F4F6"/>
                                        <Setter Property="Foreground" Value="{StaticResource TextMuted}"/>
                                        <Setter Property="FontStyle" Value="Italic"/>
                                        <Setter Property="Padding" Value="10,0"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <!-- Notes -->
                            <DataGridTextColumn Header="Notes"
                                                Binding="{Binding ValidationMessage}"
                                                Width="*"
                                                IsReadOnly="True">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Foreground" Value="{StaticResource AccentBrushDark}"/>
                                        <Setter Property="FontSize" Value="11"/>
                                        <Setter Property="TextWrapping" Value="Wrap"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <!-- Actions -->
                            <DataGridTemplateColumn Header="" Width="72" CanUserResize="False">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Content="Ã—"
                                                Style="{StaticResource DangerIconButton}"
                                                Command="{Binding DataContext.DeletePointCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                CommandParameter="{Binding}"
                                                ToolTip="Delete this point"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Border>

            <!-- Splitter -->
            <GridSplitter Grid.Column="1"
                          Width="10"
                          HorizontalAlignment="Stretch"
                          Background="Transparent"
                          ShowsPreview="True"/>

            <!-- Chart / Profile -->
            <Border Grid.Column="2" Style="{StaticResource Card}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="Temperature Profile" Style="{StaticResource CardHeader}"/>

                    <!-- Metrics tiles (only when ShowChart true) -->
                    <WrapPanel Grid.Row="1" Margin="0,0,0,12" Style="{StaticResource ShownWhenTrue}">
                        <Border Style="{StaticResource MetricTile}">
                            <StackPanel>
                                <TextBlock Text="Surface Temperature" Style="{StaticResource MetricLabel}"/>
                                <TextBlock Text="{Binding SurfaceTemperature, StringFormat='{}{0:F1} Â°F'}"
                                           Style="{StaticResource MetricValue}"/>
                            </StackPanel>
                        </Border>

                        <Border Style="{StaticResource MetricTile}">
                            <StackPanel>
                                <TextBlock Text="Bottom Hole Temperature" Style="{StaticResource MetricLabel}"/>
                                <TextBlock Text="{Binding BottomHoleTemperature, StringFormat='{}{0:F1} Â°F'}"
                                           Style="{StaticResource MetricValue}"/>
                            </StackPanel>
                        </Border>

                        <Border Style="{StaticResource MetricTile}">
                            <StackPanel>
                                <TextBlock Text="Temperature Range" Style="{StaticResource MetricLabel}"/>
                                <TextBlock Text="{Binding TemperatureRange, StringFormat='{}{0:F1} Â°F'}"
                                           Style="{StaticResource MetricValue}"/>
                            </StackPanel>
                        </Border>

                        <Border Style="{StaticResource MetricTile}">
                            <StackPanel>
                                <TextBlock Text="Average Gradient" Style="{StaticResource MetricLabel}"/>
                                <TextBlock Text="{Binding AverageGradient, StringFormat='{}{0:F2} Â°F/100ft'}"
                                           FontSize="16"
                                           FontWeight="Bold"
                                           Foreground="#16A34A"/>
                            </StackPanel>
                        </Border>

                        <Border Style="{StaticResource MetricTile}" Margin="0,0,0,0">
                            <StackPanel>
                                <TextBlock Text="Data Points" Style="{StaticResource MetricLabel}"/>
                                <TextBlock Text="{Binding DataPointsCount}" Style="{StaticResource MetricValue}"/>
                            </StackPanel>
                        </Border>

                        <Border Style="{StaticResource MetricTile}" Margin="0,0,0,0">
                            <StackPanel>
                                <TextBlock Text="Anomalies Detected" Style="{StaticResource MetricLabel}"/>
                                <TextBlock Text="{Binding AnomaliesDetectedCount}" 
                                           FontSize="16"
                                           FontWeight="Bold"
                                           Foreground="#DC2626"/>
                            </StackPanel>
                        </Border>
                    </WrapPanel>

                    <!-- Placeholder (only when ShowChart false) -->
                    <Border Grid.Row="2"
                            Background="#F9FAFB"
                            BorderBrush="{StaticResource BorderBrushSoft}"
                            BorderThickness="1"
                            CornerRadius="12"
                            Padding="18"
                            Style="{StaticResource HiddenWhenTrue}">
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock Text="ðŸ“‰" FontSize="44" HorizontalAlignment="Center" Margin="0,0,0,8" Foreground="#C7CBD1"/>
                            <TextBlock Text="Insufficient data to render chart"
                                       Foreground="{StaticResource TextMuted}"
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="Add at least 2 points to see a profile."
                                       Foreground="{StaticResource TextMuted}"
                                       FontSize="11"
                                       Margin="0,6,0,0"
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <!-- Chart container (only when ShowChart true) -->
                    <Border Grid.Row="2"
                            CornerRadius="12"
                            BorderBrush="{StaticResource BorderBrushSoft}"
                            BorderThickness="1"
                            Padding="10"
                            Style="{StaticResource ShownWhenTrue}">
                        <Grid>
                            <lvc:CartesianChart Series="{Binding SeriesCollection}"
                                                LegendLocation="Right"
                                                Zoom="Xy"
                                                Hoverable="True">
                                <lvc:CartesianChart.AxisX>
                                    <lvc:Axis Title="Temperature (Â°F)" LabelFormatter="{Binding XFormatter}"/>
                                </lvc:CartesianChart.AxisX>
                                <lvc:CartesianChart.AxisY>
                                    <!-- We store TVD as negative to invert axis; use formatter to show positive values -->
                                    <lvc:Axis Title="TVD (ft)" LabelFormatter="{Binding YFormatter}"/>
                                </lvc:CartesianChart.AxisY>
                            </lvc:CartesianChart>
                        </Grid>
                    </Border>

                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>
