<Window x:Class="ProjectReport.Views.Geometry.ToolJointConfigWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Tool Joint Configuration"
        Height="560" Width="460"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource AppBackground}"
        FocusManager.IsFocusScope="True">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

        <!-- Labels -->
        <Style x:Key="FieldLabel" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{DynamicResource AppSecondaryText}"/>
            <Setter Property="Margin" Value="0,0,0,6"/>
        </Style>

        <!-- Card -->
        <Style x:Key="Card" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource AppCardBackground}"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="BorderBrush" Value="{StaticResource TableBorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <!-- TextBox estable y centrado -->
        <Style x:Key="CenteredTextBox" TargetType="TextBox">
            <Setter Property="Padding" Value="12,0"/>
            <Setter Property="MinHeight" Value="40"/>
            <Setter Property="BorderBrush" Value="{StaticResource TableBorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="{StaticResource WhiteBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource BlackBrush}"/>
            <Setter Property="CaretBrush" Value="{StaticResource BlackBrush}"/>
            <Setter Property="SelectionBrush" Value="{StaticResource OrangeBrush}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10"
                                SnapsToDevicePixels="True">
                            <ScrollViewer x:Name="PART_ContentHost"
                                          Margin="{TemplateBinding Padding}"
                                          VerticalContentAlignment="{TemplateBinding VerticalContentAlignment}"
                                          HorizontalScrollBarVisibility="Hidden"
                                          VerticalScrollBarVisibility="Hidden"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="{StaticResource OrangeBrush}"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="BorderBrush" Value="{StaticResource OrangeBrush}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="26">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,14">
            <TextBlock Text="Tool Joint Properties"
                       FontSize="22"
                       FontWeight="SemiBold"
                       Foreground="{DynamicResource AppPrimaryText}"/>
            <TextBlock Text="Set OD/ID/length and weight. Values are used to compute hydraulics and volumes."
                       Margin="0,6,0,0"
                       Foreground="{DynamicResource AppSecondaryText}"/>
        </StackPanel>

        <!-- Body -->
        <ScrollViewer Grid.Row="1"
                      VerticalScrollBarVisibility="Auto"
                      KeyboardNavigation.TabNavigation="Cycle">
            <StackPanel>

                <Border Style="{StaticResource Card}">
                    <StackPanel>

                        <StackPanel Margin="0,0,0,14">
                            <TextBlock Text="Tool Joint OD (in)" Style="{StaticResource FieldLabel}"/>
                            <TextBox Style="{StaticResource CenteredTextBox}"
                                     Text="{Binding TJ_OD_String, Mode=TwoWay, UpdateSourceTrigger=LostFocus, TargetNullValue='', FallbackValue=''}"/>
                        </StackPanel>

                        <StackPanel Margin="0,0,0,14">
                            <TextBlock Text="Tool Joint ID (in)" Style="{StaticResource FieldLabel}"/>
                            <TextBox Style="{StaticResource CenteredTextBox}"
                                     Text="{Binding TJ_ID_String, Mode=TwoWay, UpdateSourceTrigger=LostFocus, TargetNullValue='', FallbackValue=''}"/>
                        </StackPanel>

                        <StackPanel Margin="0,0,0,14">
                            <TextBlock Text="Tool Joint Length (ft)" Style="{StaticResource FieldLabel}"/>
                            <TextBox Style="{StaticResource CenteredTextBox}"
                                     Text="{Binding TJ_Length_String, Mode=TwoWay, UpdateSourceTrigger=LostFocus, TargetNullValue='', FallbackValue=''}"/>
                        </StackPanel>

                        <StackPanel Margin="0,0,0,14"
                                    Visibility="{Binding ShowIDLength, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <TextBlock Text="Joint Length (ft)" Style="{StaticResource FieldLabel}"/>
                            <TextBox Style="{StaticResource CenteredTextBox}"
                                     Text="{Binding TJ_ID_Length_String, Mode=TwoWay, UpdateSourceTrigger=LostFocus, TargetNullValue='', FallbackValue=''}"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>

        <!-- Footer -->
        <Border Grid.Row="2" Background="Transparent" Margin="0,14,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           Text="Tip: use '.' for decimals."
                           Foreground="{DynamicResource AppSecondaryText}"
                           VerticalAlignment="Center"/>

                <StackPanel Grid.Column="1"
                            Orientation="Horizontal"
                            HorizontalAlignment="Right">
                    <Button Content="Cancel"
                            Width="110" Height="38"
                            Command="{Binding CancelCommand}"
                            Margin="0,0,12,0"
                            Style="{StaticResource DefaultButton}"/>

                    <Button Content="Save"
                            Width="110" Height="38"
                            Command="{Binding SaveCommand}"
                            Style="{StaticResource PrimaryButton}"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
