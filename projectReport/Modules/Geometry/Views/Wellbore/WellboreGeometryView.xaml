<UserControl x:Class="ProjectReport.Views.Geometry.Wellbore.WellboreGeometryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:converters="clr-namespace:ProjectReport.Converters"
             mc:Ignorable="d"
             d:DesignHeight="700"
             d:DesignWidth="1400">

    <UserControl.Resources>
        <!-- Converters -->
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <converters:CollectionToVisibilityConverter x:Key="CollectionToVis"/>
        <converters:StringIsNullOrEmptyConverter x:Key="StringIsNullOrEmptyConverter"/>

        <!-- Brushes -->
        <SolidColorBrush x:Key="Surface" Color="White"/>
        <SolidColorBrush x:Key="BorderSoft" Color="#E6E8EB"/>
        <SolidColorBrush x:Key="TextMuted" Color="#6B7280"/>
        <SolidColorBrush x:Key="TextStrong" Color="#111827"/>
        <SolidColorBrush x:Key="BrandOrange" Color="#F57C1F"/>
        <SolidColorBrush x:Key="BrandOrangeHover" Color="#EF6C00"/>
        <SolidColorBrush x:Key="Danger" Color="#DC2626"/>
        <SolidColorBrush x:Key="DisabledBackground" Color="#F3F4F6"/>
        <SolidColorBrush x:Key="DisabledText" Color="#9CA3AF"/>

        <!-- Card Style -->
        <Style x:Key="CardBorder" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource Surface}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderSoft}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="14"/>
        </Style>

        <!-- Button Styles -->
        <Style x:Key="BrandPrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource BrandOrange}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="12,7"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="8" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource BrandOrangeHover}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- DataGrid Style -->
        <Style x:Key="ModernDataGrid" TargetType="DataGrid">
            <Setter Property="Background" Value="{StaticResource Surface}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderSoft}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="RowBackground" Value="White"/>
            <Setter Property="AlternatingRowBackground" Value="#FFF9FAFB"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
            <Setter Property="CanUserResizeRows" Value="False"/>
            <Setter Property="RowHeight" Value="36"/>
            <Setter Property="ColumnHeaderHeight" Value="38"/>
            <Setter Property="SelectionUnit" Value="FullRow"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>

        <!-- Disabled TextBox Style -->
        <Style x:Key="DisabledTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="{StaticResource DisabledBackground}"/>
            <Setter Property="Foreground" Value="{StaticResource DisabledText}"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderSoft}"/>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header with Add Button -->
        <Border Grid.Row="0" Style="{StaticResource CardBorder}" Margin="0,0,0,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Wellbore Configuration" 
                               FontSize="16" 
                               FontWeight="Bold" 
                               Foreground="{StaticResource TextStrong}"/>
                </StackPanel>

                <TextBlock Grid.Column="1"
                           Text="Use '.' for decimals"
                           Foreground="{StaticResource TextMuted}"
                           FontSize="11"
                           VerticalAlignment="Center"
                           Margin="20,0,20,0"/>

                <Button Grid.Column="2"
                        Content="Add Section"
                        Style="{StaticResource BrandPrimaryButton}"
                        Command="{Binding AddWellboreSectionCommand}"/>
            </Grid>
        </Border>

        <!-- Main Content: DataGrid + Visualizer -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="15"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <!-- Wellbore Components DataGrid -->
            <DataGrid Grid.Column="0"
                      Style="{StaticResource ModernDataGrid}"
                      ItemsSource="{Binding WellboreComponents}"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      CanUserDeleteRows="False"
                      SelectionMode="Single">

                <DataGrid.Columns>
                    <!-- No. Column (Renamed from ID) -->
                    <DataGridTextColumn Header="No." Binding="{Binding Id}" Width="40" IsReadOnly="True"
                                        Foreground="{StaticResource TextMuted}"/>

                    <!-- Name / Description Column -->
                    <DataGridTemplateColumn Header="Name / Descripción" Width="200">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Grid>
                                    <TextBlock Text="Ej: Intermediate Casing"
                                               Foreground="{StaticResource DisabledText}"
                                               FontStyle="Italic"
                                               VerticalAlignment="Center"
                                               Margin="10,0,0,0"
                                               IsHitTestVisible="False">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Name, Converter={StaticResource StringIsNullOrEmptyConverter}}" Value="False">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                    <TextBlock Text="{Binding Name}" VerticalAlignment="Center" Padding="10,6"/>
                                </Grid>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                        <DataGridTemplateColumn.CellEditingTemplate>
                            <DataTemplate>
                                <!-- Placeholder handled by CellTemplate usually, but in editing mode we just show TextBox -->
                                <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" Padding="8,6"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellEditingTemplate>
                    </DataGridTemplateColumn>

                    <!-- Section Type Column -->
                    <DataGridTemplateColumn Header="Section Type" Width="130">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding SectionType}" VerticalAlignment="Center" Padding="10,6"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                        <DataGridTemplateColumn.CellEditingTemplate>
                            <DataTemplate>
                                <ComboBox ItemsSource="{Binding DataContext.WellboreSectionTypes, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                          SelectedItem="{Binding SectionType, UpdateSourceTrigger=PropertyChanged}"
                                          DisplayMemberPath="."
                                          Padding="8,6"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellEditingTemplate>
                    </DataGridTemplateColumn>

                    <!-- Stage (Logistics) Column -->
                    <DataGridTemplateColumn Header="Stage / Etapa" Width="130">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Stage}" VerticalAlignment="Center" Padding="10,6"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                        <DataGridTemplateColumn.CellEditingTemplate>
                            <DataTemplate>
                                <ComboBox ItemsSource="{Binding DataContext.WellboreStages, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                          SelectedItem="{Binding Stage, UpdateSourceTrigger=PropertyChanged}"
                                          DisplayMemberPath="."
                                          Padding="8,6"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellEditingTemplate>
                    </DataGridTemplateColumn>

                    <!-- OD Column -->
                    <DataGridTextColumn Header="OD (in)" 
                                        Binding="{Binding OD, StringFormat=F3, TargetNullValue=''}" 
                                        Width="80"/>

                    <!-- ID Column -->
                    <DataGridTextColumn Header="ID (in)" 
                                        Binding="{Binding ID, StringFormat=F3, TargetNullValue=''}" 
                                        Width="80"/>

                    <!-- Top MD Column - Read-only for continuity -->
                    <DataGridTemplateColumn Header="Top MD (ft)" Width="90">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding TopMD, StringFormat=F2, TargetNullValue=''}" 
                                           VerticalAlignment="Center" 
                                           Padding="10,6"
                                           Foreground="{StaticResource DisabledText}"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                        <DataGridTemplateColumn.CellEditingTemplate>
                            <DataTemplate>
                                <TextBox Text="{Binding TopMD, StringFormat=F2, TargetNullValue=''}" 
                                         IsEnabled="{Binding IsTopMDEditable}"
                                         Style="{StaticResource DisabledTextBox}"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellEditingTemplate>
                    </DataGridTemplateColumn>

                    <!-- Bottom MD Column -->
                    <DataGridTextColumn Header="Bottom MD (ft)" 
                                        Binding="{Binding BottomMD, StringFormat=F2, TargetNullValue=''}" 
                                        Width="100"/>

                    <!-- Washout Column - Enabled only for OpenHole -->
                    <DataGridTemplateColumn Header="Washout (%)" Width="90">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Washout, StringFormat=F2, TargetNullValue='-'}" 
                                           VerticalAlignment="Center" 
                                           Padding="10,6"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                        <DataGridTemplateColumn.CellEditingTemplate>
                            <DataTemplate>
                                <TextBox Text="{Binding Washout, StringFormat=F2, TargetNullValue=''}" 
                                         IsEnabled="{Binding IsWashoutEnabled}"
                                         Style="{StaticResource DisabledTextBox}"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellEditingTemplate>
                    </DataGridTemplateColumn>

                    <!-- Volume Column -->
                    <DataGridTextColumn Header="Volume (bbl)" 
                                        Binding="{Binding Volume, StringFormat=F2, TargetNullValue=''}" 
                                        Width="90" 
                                        IsReadOnly="True"/>

                    <!-- Actions Column -->
                    <DataGridTemplateColumn Header="Actions" Width="80">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <Button Content="×" Padding="6,2" MinWidth="20" ToolTip="Delete" 
                                            Foreground="{StaticResource Danger}" Margin="1,0"
                                            Command="{Binding DataContext.DeleteWellboreSectionCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                            CommandParameter="{Binding}"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>

            <!-- Visualizer Column -->
            <Border Grid.Column="2" Style="{StaticResource CardBorder}" Padding="0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Text="Schematic" 
                               Grid.Row="0"
                               FontWeight="Bold" 
                               Foreground="{StaticResource TextStrong}" 
                               Margin="10,10,0,0"/>

                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <Canvas x:Name="WellboreCanvas" 
                                Margin="10" 
                                HorizontalAlignment="Stretch" 
                                VerticalAlignment="Top"
                                MinHeight="400"/>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>

        <!-- Footer: Summary Table & Notes -->
        <Grid Grid.Row="2" Margin="0,12,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="15"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Summary Table -->
            <Border Grid.Column="0" Style="{StaticResource CardBorder}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Text="Technical Summary" FontWeight="Bold" Margin="0,0,0,8"/>
                    
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Total MD -->
                        <Border Grid.Column="0" Margin="0,0,4,0" Background="#F9FAFB" CornerRadius="6" Padding="8">
                            <StackPanel>
                                <TextBlock Text="Total MD" FontSize="10" Foreground="{StaticResource TextMuted}"/>
                                <TextBlock Text="{Binding TotalWellboreMD, StringFormat='{}{0:F2} ft'}" 
                                           FontWeight="Bold" FontSize="14" Foreground="{StaticResource BrandOrange}"/>
                            </StackPanel>
                        </Border>

                        <!-- Shoe Depth -->
                        <Border Grid.Column="1" Margin="4,0,4,0" Background="#F9FAFB" CornerRadius="6" Padding="8">
                            <StackPanel>
                                <TextBlock Text="Shoe Depth" FontSize="10" Foreground="{StaticResource TextMuted}"/>
                                <TextBlock Text="{Binding ShoeDepth, StringFormat='{}{0:F2} ft'}" 
                                           FontWeight="Bold" FontSize="14" Foreground="{StaticResource TextStrong}"/>
                            </StackPanel>
                        </Border>

                        <!-- Total Volume -->
                        <Border Grid.Column="2" Margin="4,0,0,0" Background="#F9FAFB" CornerRadius="6" Padding="8">
                            <StackPanel>
                                <TextBlock Text="Total Volume" FontSize="10" Foreground="{StaticResource TextMuted}"/>
                                <TextBlock Text="{Binding TotalWellboreVolume, StringFormat='{}{0:F2} bbl'}" 
                                           FontWeight="Bold" FontSize="14" Foreground="{StaticResource TextStrong}"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Grid>
            </Border>

            <!-- Legend & Notes -->
            <Border Grid.Column="2" Style="{StaticResource CardBorder}">
                <StackPanel>
                    <TextBlock Text="Legend &amp; Notes" FontWeight="Bold" Foreground="{StaticResource TextStrong}" Margin="0,0,0,8"/>
                    <TextBlock Foreground="{StaticResource TextMuted}" FontSize="11" Margin="0,0,0,4">
                        <Run Text="• Top MD is auto-linked (continuity enforced)."/>
                    </TextBlock>
                    <TextBlock Foreground="{StaticResource TextMuted}" FontSize="11" Margin="0,0,0,4">
                        <Run Text="• Washout enabled for Open Hole only."/>
                    </TextBlock>
                     <TextBlock Foreground="{StaticResource TextMuted}" FontSize="11">
                        <Run Text="• Volume auto-calculated."/>
                    </TextBlock>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>
