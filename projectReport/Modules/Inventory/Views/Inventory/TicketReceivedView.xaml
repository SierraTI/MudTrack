<UserControl x:Class="ProjectReport.Views.Inventory.TicketReceivedView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:ProjectReport.ViewModels.Inventory"
             Height="420" Width="700"
             Loaded="UserControl_Loaded">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Text="Create Received Ticket"
                   FontSize="18"
                   FontWeight="SemiBold"
                   Margin="0,0,0,12"/>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="160"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/> <!-- Requisition -->
                <RowDefinition Height="Auto"/> <!-- Product -->
                <RowDefinition Height="Auto"/> <!-- Origin -->
                <RowDefinition Height="Auto"/> <!-- UnitPrice -->
                <RowDefinition Height="Auto"/> <!-- Quantity -->
                <RowDefinition Height="Auto"/> <!-- Observations -->
                <RowDefinition Height="Auto"/> <!-- Error -->
            </Grid.RowDefinitions>

            <!-- Requisition -->
            <TextBlock Grid.Row="0" Grid.Column="0" Text="Requisition #:" VerticalAlignment="Center" Margin="0,0,10,8"/>
            <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding Requisition, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,8"/>

            <!-- Product selector -->
            <TextBlock Grid.Row="1" Grid.Column="0" Text="Product:" VerticalAlignment="Center" Margin="0,0,10,8"/>
            <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Vertical" Margin="0,0,0,8">
                <DockPanel Margin="0,0,0,6">
                    <TextBox DockPanel.Dock="Left"
                             Width="420"
                             Text="{Binding ProductSearchText, UpdateSourceTrigger=PropertyChanged}"
                             VerticalAlignment="Center"
                             Margin="0,0,6,0"
                             ToolTip="Search by code or name"/>
                    <Button DockPanel.Dock="Right"
                            Content="Refresh list"
                            Width="100"
                            Command="{Binding RefreshCommand}"
                            VerticalAlignment="Center"/>
                </DockPanel>

                <ComboBox ItemsSource="{Binding FilteredProducts}"
                          SelectedItem="{Binding SelectedProduct}"
                          IsEditable="False"
                          MaxHeight="200"
                          DisplayMemberPath="Name"/>
            </StackPanel>

            <!-- Origin -->
            <TextBlock Grid.Row="2" Grid.Column="0" Text="Origin:" VerticalAlignment="Center" Margin="0,0,10,8"/>
            <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding Origin, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,8"/>

            <!-- Unit Price -->
            <TextBlock Grid.Row="3" Grid.Column="0" Text="Unit Price:" VerticalAlignment="Center" Margin="0,0,10,8"/>
            <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding UnitPrice, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,8"/>

            <!-- Quantity -->
            <TextBlock Grid.Row="4" Grid.Column="0" Text="Quantity:" VerticalAlignment="Center" Margin="0,0,10,8"/>
            <TextBox Grid.Row="4" Grid.Column="1" Text="{Binding Quantity, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,8"/>

            <!-- Observations -->
            <TextBlock Grid.Row="5" Grid.Column="0" Text="Observations:" VerticalAlignment="Top" Margin="0,0,10,8"/>
            <TextBox Grid.Row="5" Grid.Column="1"
                     Text="{Binding Observations, UpdateSourceTrigger=PropertyChanged}"
                     Height="80"
                     TextWrapping="Wrap"
                     AcceptsReturn="True"
                     Margin="0,0,0,8"/>

            <!-- Error -->
            <TextBlock Grid.Row="6" Grid.Column="0" Text="Error:" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <TextBlock Grid.Row="6" Grid.Column="1"
                       Text="{Binding Error}"
                       Foreground="Red"
                       TextWrapping="Wrap"/>
        </Grid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button Content="Cancel" Width="110" Margin="0,0,10,0" Command="{Binding CancelCommand}"/>
            <Button Content="Save" Width="110" Command="{Binding SaveCommand}"/>
        </StackPanel>
    </Grid>
</UserControl>
