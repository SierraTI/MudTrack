<UserControl x:Class="ProjectReport.Views.Inventory.TicketReceivedView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Text="Create Received Ticket"
                   FontSize="18"
                   FontWeight="SemiBold"
                   Margin="0,0,0,10"/>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="170"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Grid.Column="0" Text="Product:" VerticalAlignment="Center" Margin="0,0,10,8"/>
            <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Vertical">
                <TextBox Text="{Binding ProductSearchText, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,6"/>

                <ComboBox ItemsSource="{Binding FilteredProducts}"
                          SelectedItem="{Binding SelectedProduct}"
                          DisplayMemberPath="Name"
                          IsEditable="False"
                          MaxHeight="200"
                          Margin="0,0,0,6"/>

                <StackPanel Orientation="Horizontal">
                    <TextBox Width="180" Text="{Binding ProductCode, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,6,0"/>
                    <TextBox Width="200" Text="{Binding ProductName, UpdateSourceTrigger=PropertyChanged}"/>

                </StackPanel>
            </StackPanel>

            <TextBlock Grid.Row="1" Grid.Column="0" Text="Origin:" VerticalAlignment="Center" Margin="0,0,10,8"/>
            <TextBox Grid.Row="1" Grid.Column="1"
                     Text="{Binding Origin, UpdateSourceTrigger=PropertyChanged}"
                     Margin="0,0,0,8"/>

            <TextBlock Grid.Row="2" Grid.Column="0" Text="Unit Price:" VerticalAlignment="Center" Margin="0,0,10,8"/>
            <TextBox Grid.Row="2" Grid.Column="1"
                     Text="{Binding UnitPrice, UpdateSourceTrigger=PropertyChanged}"
                     Margin="0,0,0,8"/>

            <TextBlock Grid.Row="3" Grid.Column="0" Text="Quantity:" VerticalAlignment="Center" Margin="0,0,10,8"/>
            <TextBox Grid.Row="3" Grid.Column="1"
                     Text="{Binding Quantity, UpdateSourceTrigger=PropertyChanged}"
                     Margin="0,0,0,8"/>

            <TextBlock Grid.Row="4" Grid.Column="0" Text="Observations:" VerticalAlignment="Top" Margin="0,0,10,8"/>
            <TextBox Grid.Row="4" Grid.Column="1"
                     Text="{Binding Observations, UpdateSourceTrigger=PropertyChanged}"
                     Height="80"
                     TextWrapping="Wrap"
                     AcceptsReturn="True"
                     Margin="0,0,0,8"/>

            <TextBlock Grid.Row="5" Grid.Column="0" Text="Error:" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <TextBlock Grid.Row="5" Grid.Column="1"
                       Text="{Binding Error}"
                       Foreground="Red"
                       TextWrapping="Wrap"/>
        </Grid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Cancel" Width="110" Margin="0,0,10,0" Command="{Binding CancelCommand}"/>
            <Button Content="Save" Width="110" Command="{Binding SaveCommand}"/>
        </StackPanel>
    </Grid>
</UserControl>
