<UserControl x:Class="ProjectReport.Views.ReportWizard.PersonnelPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="650" d:DesignWidth="1100"
             Background="#F7F8FA">

    <UserControl.Resources>

        <!-- ===== Palette (keep consistent with the wizard) ===== -->
        <SolidColorBrush x:Key="AccentBrush" Color="#F97316"/>
        <SolidColorBrush x:Key="AccentBrushDark" Color="#EA580C"/>
        <SolidColorBrush x:Key="SurfaceBrush" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="BorderBrushSoft" Color="#E6E8EB"/>
        <SolidColorBrush x:Key="BorderBrushInput" Color="#D1D5DB"/>
        <SolidColorBrush x:Key="TextPrimary" Color="#111827"/>
        <SolidColorBrush x:Key="TextSecondary" Color="#374151"/>
        <SolidColorBrush x:Key="TextMuted" Color="#6B7280"/>
        <SolidColorBrush x:Key="DangerBrush" Color="#DC2626"/>

        <!-- Card -->
        <Style x:Key="Card" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource SurfaceBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrushSoft}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="14"/>
            <Setter Property="Padding" Value="18"/>
            <Setter Property="Margin" Value="0,0,0,14"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
        </Style>

        <!-- Titles -->
        <Style x:Key="PageTitle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="Margin" Value="0,0,0,16"/>
        </Style>

        <Style x:Key="SectionTitle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{StaticResource TextSecondary}"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>

        <Style x:Key="SubtleHint" TargetType="TextBlock">
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Foreground" Value="{StaticResource TextMuted}"/>
        </Style>

        <!-- TextBox (rounded + focus naranja) -->
        <Style TargetType="TextBox">
            <Setter Property="MinHeight" Value="36"/>
            <Setter Property="Padding" Value="12,7"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrushInput}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="{StaticResource SurfaceBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="Bd"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10"
                                SnapsToDevicePixels="True">
                            <ScrollViewer x:Name="PART_ContentHost" Margin="0"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsKeyboardFocused" Value="True">
                                <Setter TargetName="Bd" Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
                                <Setter TargetName="Bd" Property="BorderThickness" Value="1.5"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Bd" Property="Background" Value="#F3F4F6"/>
                                <Setter Property="Foreground" Value="{StaticResource TextMuted}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Primary add button (naranja) -->
        <Style x:Key="AddButton" TargetType="Button">
            <Setter Property="Padding" Value="14,7"/>
            <Setter Property="MinHeight" Value="36"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Bd"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10"
                                SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="{StaticResource AccentBrushDark}"/>
                                <Setter TargetName="Bd" Property="BorderBrush" Value="{StaticResource AccentBrushDark}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Bd" Property="Opacity" Value="0.92"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Bd" Property="Opacity" Value="0.55"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Danger icon button (soft red, consistente) -->
        <Style x:Key="RemoveIconButton" TargetType="Button">
            <Setter Property="Width" Value="32"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="{StaticResource DangerBrush}"/>
            <Setter Property="Background" Value="#FEF2F2"/>
            <Setter Property="BorderBrush" Value="#FECACA"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Bd"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10"
                                SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#FEE2E2"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Bd" Property="Opacity" Value="0.9"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Bd" Property="Opacity" Value="0.55"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Row item (más pro: hover) -->
        <Style x:Key="PersonRowCard" TargetType="Border">
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="BorderBrush" Value="#EEF0F3"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>

        <Style x:Key="PersonName" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
        </Style>

    </UserControl.Resources>

    <Grid Margin="22">
        <ScrollViewer VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled">
            <StackPanel>

                <TextBlock Text="Personnel on Rig" Style="{StaticResource PageTitle}"/>

                <!-- Operator Reps -->
                <Border Style="{StaticResource Card}">
                    <StackPanel>
                        <TextBlock Text="Operator Representative(s)" Style="{StaticResource SectionTitle}"/>
                        <TextBlock Text="Add and remove names as needed for this report."
                                   Style="{StaticResource SubtleHint}"
                                   Margin="0,0,0,10"/>

                        <ItemsControl ItemsSource="{Binding Report.OperatorReps}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Style="{StaticResource PersonRowCard}">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Grid.Column="0"
                                                       Text="{Binding}"
                                                       Style="{StaticResource PersonName}"/>

                                            <Button Grid.Column="1"
                                                    Content="✕"
                                                    Style="{StaticResource RemoveIconButton}"
                                                    Click="RemoveOperator_Click"
                                                    Tag="{Binding}"
                                                    ToolTip="Remove"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <Grid Margin="0,10,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBox x:Name="TxtNewOperator"
                                     Grid.Column="0"
                                     Margin="0,0,10,0"/>

                            <Button Grid.Column="1"
                                    Content="+ Add"
                                    Style="{StaticResource AddButton}"
                                    Click="AddOperator_Click"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Contractor Reps -->
                <Border Style="{StaticResource Card}">
                    <StackPanel>
                        <TextBlock Text="Contractor Representative(s)" Style="{StaticResource SectionTitle}"/>
                        <TextBlock Text="Keep this list tight—only who matters on-site."
                                   Style="{StaticResource SubtleHint}"
                                   Margin="0,0,0,10"/>

                        <ItemsControl ItemsSource="{Binding Report.ContractorReps}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Style="{StaticResource PersonRowCard}">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Grid.Column="0"
                                                       Text="{Binding}"
                                                       Style="{StaticResource PersonName}"/>

                                            <Button Grid.Column="1"
                                                    Content="✕"
                                                    Style="{StaticResource RemoveIconButton}"
                                                    Click="RemoveContractor_Click"
                                                    Tag="{Binding}"
                                                    ToolTip="Remove"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <Grid Margin="0,10,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBox x:Name="TxtNewContractor"
                                     Grid.Column="0"
                                     Margin="0,0,10,0"/>

                            <Button Grid.Column="1"
                                    Content="+ Add"
                                    Style="{StaticResource AddButton}"
                                    Click="AddContractor_Click"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- GSA reps -->
                <Border Style="{StaticResource Card}">
                    <StackPanel>
                        <TextBlock Text="GSA Representative(s)" Style="{StaticResource SectionTitle}"/>
                        <TextBlock Text="Same game: add, remove, ship the report."
                                   Style="{StaticResource SubtleHint}"
                                   Margin="0,0,0,10"/>

                        <ItemsControl ItemsSource="{Binding Report.BaroidReps}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Style="{StaticResource PersonRowCard}">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Grid.Column="0"
                                                       Text="{Binding}"
                                                       Style="{StaticResource PersonName}"/>

                                            <Button Grid.Column="1"
                                                    Content="✕"
                                                    Style="{StaticResource RemoveIconButton}"
                                                    Click="RemoveBaroid_Click"
                                                    Tag="{Binding}"
                                                    ToolTip="Remove"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <Grid Margin="0,10,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBox x:Name="TxtNewBaroid"
                                     Grid.Column="0"
                                     Margin="0,0,10,0"/>

                            <Button Grid.Column="1"
                                    Content="+ Add"
                                    Style="{StaticResource AddButton}"
                                    Click="AddBaroid_Click"/>
                        </Grid>
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
