<UserControl x:Class="ProjectReport.Views.ReportWizard.ReportDetailsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="650" d:DesignWidth="1100"
             Background="#F7F8FA">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis" />

        <!-- Tokens -->
        <SolidColorBrush x:Key="AppBg" Color="#F7F8FA"/>
        <SolidColorBrush x:Key="Surface" Color="White"/>
        <SolidColorBrush x:Key="BorderSoft" Color="#E6E8EB"/>
        <SolidColorBrush x:Key="TextStrong" Color="#111827"/>
        <SolidColorBrush x:Key="TextMuted" Color="#6B7280"/>

        <!-- Brand (Orange) -->
        <SolidColorBrush x:Key="BrandOrange" Color="#F57C1F"/>
        <SolidColorBrush x:Key="BrandOrangeHover" Color="#EF6C00"/>
        <SolidColorBrush x:Key="BrandOrangePressed" Color="#E65100"/>

        <SolidColorBrush x:Key="Danger" Color="#DC2626"/>

        <!-- Hint (orange-friendly) -->
        <SolidColorBrush x:Key="HintBg" Color="#FFF7ED"/>
        <SolidColorBrush x:Key="HintBorder" Color="#FDBA74"/>
        <SolidColorBrush x:Key="HintTextBrush" Color="#C2410C"/>

        <!-- Header -->
        <Style x:Key="PageTitle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="22"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{StaticResource TextStrong}"/>
        </Style>

        <Style x:Key="PageSubtitle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12.5"/>
            <Setter Property="Foreground" Value="{StaticResource TextMuted}"/>
            <Setter Property="Margin" Value="0,6,0,0"/>
        </Style>

        <!-- Section titles -->
        <Style x:Key="SectionTitle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{StaticResource TextStrong}"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
        </Style>

        <Style x:Key="FieldLabel" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#374151"/>
        </Style>

        <Style x:Key="RequiredStar" TargetType="TextBlock">
            <Setter Property="Text" Value=" *"/>
            <Setter Property="Foreground" Value="{StaticResource Danger}"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <!-- Card container -->
        <Style x:Key="Card" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource Surface}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderSoft}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Margin" Value="0,0,0,14"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
        </Style>

        <!-- Inputs -->
        <Style TargetType="TextBox">
            <Setter Property="MinHeight" Value="40"/>
            <Setter Property="Padding" Value="12,0"/>
            <Setter Property="BorderBrush" Value="#D1D5DB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="Bd"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10"
                                SnapsToDevicePixels="True">
                            <ScrollViewer x:Name="PART_ContentHost"
                                          Margin="{TemplateBinding Padding}"
                                          VerticalContentAlignment="{TemplateBinding VerticalContentAlignment}"
                                          HorizontalScrollBarVisibility="Hidden"
                                          VerticalScrollBarVisibility="Hidden"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsKeyboardFocused" Value="True">
                                <Setter TargetName="Bd" Property="BorderBrush" Value="{StaticResource BrandOrange}"/>
                                <Setter TargetName="Bd" Property="BorderThickness" Value="1.5"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Bd" Property="Background" Value="#F3F4F6"/>
                            </Trigger>

                            <Trigger Property="Validation.HasError" Value="true">
                                <Setter Property="ToolTip"
                                        Value="{Binding RelativeSource={x:Static RelativeSource.Self},
                                                Path=(Validation.Errors)[0].ErrorContent}"/>
                                <Setter TargetName="Bd" Property="BorderBrush" Value="{StaticResource Danger}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="ComboBox">
            <Setter Property="MinHeight" Value="40"/>
            <Setter Property="Padding" Value="12,0"/>
            <Setter Property="BorderBrush" Value="#D1D5DB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <Style TargetType="DatePicker">
            <Setter Property="MinHeight" Value="40"/>
            <Setter Property="BorderBrush" Value="#D1D5DB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>

        <Style TargetType="CheckBox">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="{StaticResource TextStrong}"/>
        </Style>

        <!-- Link button (Orange) -->
        <Style TargetType="Button" x:Key="LinkButton">
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Foreground" Value="{StaticResource BrandOrange}"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="4,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <ContentPresenter/>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Foreground" Value="{StaticResource BrandOrangeHover}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Foreground" Value="{StaticResource BrandOrangePressed}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Hint text -->
        <Style x:Key="HintText" TargetType="TextBlock">
            <Setter Property="FontSize" Value="10.5"/>
            <Setter Property="Foreground" Value="{StaticResource HintTextBrush}"/>
            <Setter Property="FontStyle" Value="Italic"/>
        </Style>
    </UserControl.Resources>

    <Grid Background="{StaticResource AppBg}">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <Grid Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Page header -->
                <Border Grid.Row="0" Background="Transparent" Padding="0,2,0,10">
                    <StackPanel>
                        <TextBlock Text="Report Details" Style="{StaticResource PageTitle}"/>
                        <TextBlock Text="Complete the required fields. Validation will show inline if something is off."
                                   Style="{StaticResource PageSubtitle}"/>
                    </StackPanel>
                </Border>

                <!-- GENERAL -->
                <Border Grid.Row="1" Style="{StaticResource Card}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0"
                                   Text="General Well Information"
                                   Style="{StaticResource SectionTitle}"/>

                        <Grid Grid.Row="1">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Row 1 -->
                            <Grid Grid.Row="0" Margin="0,2,0,14">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="3*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Interval -->
                                <StackPanel Grid.Column="0" Margin="0,0,14,0">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Interval #" Style="{StaticResource FieldLabel}"/>
                                        <TextBlock Style="{StaticResource RequiredStar}"/>
                                    </StackPanel>
                                    <TextBox Text="{Binding Report.IntervalNumber,
                                                    UpdateSourceTrigger=PropertyChanged,
                                                    ValidatesOnDataErrors=True}"
                                             Margin="0,6,0,0"/>
                                </StackPanel>

                                <!-- Date/Time -->
                                <StackPanel Grid.Column="1">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Report Date/Time" Style="{StaticResource FieldLabel}"/>
                                        <TextBlock Style="{StaticResource RequiredStar}"/>
                                    </StackPanel>
                                    <DatePicker SelectedDate="{Binding Report.ReportDateTime,
                                                               ValidatesOnDataErrors=True}"
                                                Margin="0,6,0,0"/>
                                </StackPanel>
                            </Grid>

                            <!-- Row 2 -->
                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="1*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0" Margin="0,0,14,0">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Report MD (ft)" Style="{StaticResource FieldLabel}"/>
                                        <TextBlock Style="{StaticResource RequiredStar}"/>
                                    </StackPanel>
                                    <TextBox Text="{Binding Report.MD,
                                                    UpdateSourceTrigger=PropertyChanged,
                                                    ValidatesOnDataErrors=True}"
                                             Margin="0,6,0,0"/>
                                </StackPanel>

                                <StackPanel Grid.Column="1">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Report TVD (ft)" Style="{StaticResource FieldLabel}"/>
                                        <TextBlock Style="{StaticResource RequiredStar}"/>
                                    </StackPanel>
                                    <TextBox Text="{Binding Report.TVD,
                                                    UpdateSourceTrigger=PropertyChanged,
                                                    ValidatesOnDataErrors=True}"
                                             Margin="0,6,0,0"/>
                                </StackPanel>
                            </Grid>
                        </Grid>
                    </Grid>
                </Border>

                <!-- OPERATIONAL -->
                <Border Grid.Row="2" Style="{StaticResource Card}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0"
                                   Text="Operational Data"
                                   Style="{StaticResource SectionTitle}"/>

                        <!-- Row 3 -->
                        <Grid Grid.Row="1" Margin="0,2,0,14">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="3*"/>
                                <ColumnDefinition Width="2*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Well Section -->
                            <StackPanel Grid.Column="0" Margin="0,0,14,0">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Well Section" Style="{StaticResource FieldLabel}"/>
                                    <TextBlock Style="{StaticResource RequiredStar}"/>
                                </StackPanel>

                                <ComboBox Text="{Binding Report.WellSection,
                                                         Mode=TwoWay,
                                                         ValidatesOnDataErrors=True}"
                                          IsEditable="True"
                                          Margin="0,6,0,0">
                                    <ComboBoxItem>Original</ComboBoxItem>
                                    <ComboBoxItem>Sidtrack</ComboBoxItem>
                                </ComboBox>

                                <!-- Inherited hint -->
                                <Border Background="{StaticResource HintBg}"
                                        BorderBrush="{StaticResource HintBorder}"
                                        BorderThickness="1"
                                        CornerRadius="10"
                                        Padding="10"
                                        Margin="0,10,0,0"
                                        Visibility="{Binding InheritedFields, Converter={StaticResource BoolToVis}}">
                                    <DockPanel LastChildFill="False">
                                        <TextBlock Text="From last report"
                                                   Style="{StaticResource HintText}"
                                                   VerticalAlignment="Center"
                                                   DockPanel.Dock="Left"/>
                                        <Button Content="clear"
                                                Style="{StaticResource LinkButton}"
                                                Command="{Binding ClearInheritedFieldCommand}"
                                                HorizontalAlignment="Right"
                                                DockPanel.Dock="Right"/>
                                    </DockPanel>
                                </Border>
                            </StackPanel>

                            <!-- Max BHT -->
                            <StackPanel Grid.Column="1">
                                <TextBlock Text="Max BHT (Â°F)" Style="{StaticResource FieldLabel}"/>
                                <TextBox Text="{Binding Report.MaxBHT}" Margin="0,6,0,0"/>
                            </StackPanel>
                        </Grid>

                        <!-- Row 4 -->
                        <StackPanel Grid.Row="2" Margin="0,0,0,14">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Present Activity" Style="{StaticResource FieldLabel}"/>
                                <TextBlock Style="{StaticResource RequiredStar}"/>
                            </StackPanel>
                            <TextBox Text="{Binding Report.PresentActivity,
                                                    UpdateSourceTrigger=PropertyChanged,
                                                    ValidatesOnDataErrors=True}"
                                     Margin="0,6,0,0"/>
                        </StackPanel>

                        <!-- Row 5 -->
                        <StackPanel Grid.Row="3" Margin="0,0,0,14">
                            <TextBlock Text="Primary Fluid Set" Style="{StaticResource FieldLabel}"/>
                            <TextBox Text="{Binding Report.PrimaryFluidSet}" Margin="0,6,0,0"/>
                        </StackPanel>

                        <!-- Row 6 -->
                        <StackPanel Grid.Row="4">
                            <TextBlock Text="Other Active Fluids" Style="{StaticResource FieldLabel}"/>
                            <TextBox Text="{Binding Report.OtherActiveFluids}"
                                     Margin="0,6,0,0"
                                     MinHeight="110"
                                     AcceptsReturn="True"
                                     TextWrapping="Wrap"
                                     VerticalScrollBarVisibility="Auto"/>
                        </StackPanel>

                    </Grid>
                </Border>

            </Grid>
        </ScrollViewer>
    </Grid>
</UserControl>
