<Window x:Class="ProjectReport.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:ProjectReport.Views.Controls"
        Title="PROJECT REPORT MANAGER"
        Height="700"
        Width="1200"
        MinHeight="520"
        MinWidth="860"
        WindowStartupLocation="CenterScreen"
        Style="{StaticResource {x:Type Window}}">
       

    <Window.Resources>

      

        <!-- botones superiores -->
        <Style x:Key="TopMenuButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Margin" Value="4,2"/>
            <Setter Property="Padding" Value="14,6"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF9B3A"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#E86F10"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.55"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- titulos -->
        <Style x:Key="ModuleTitleStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Foreground" Value="{StaticResource BlackBrush}"/>
        </Style>

    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>   <!-- barra -->
            <RowDefinition Height="Auto"/>   <!-- SUBMENU (si se muestra) -->
            <RowDefinition Height="*"/>      <!-- contenido -->
            <RowDefinition Height="40"/>     <!-- Status del bar -->
        </Grid.RowDefinitions>

        <!-- barra -->
        <Border Grid.Row="0"
                Background="{StaticResource OrangeBrush}"
                MouseLeftButtonDown="Header_MouseLeftButtonDown"
                Padding="12,8">

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>  <!-- Logo -->
                    <ColumnDefinition Width="*"/>     <!-- Menu -->
                    <ColumnDefinition Width="Auto"/>  <!-- espacio -->
                </Grid.ColumnDefinitions>

                <!-- Logo -->
                <StackPanel Grid.Column="0"
                            Orientation="Horizontal"
                            VerticalAlignment="Center"
                            Margin="4,0,18,0">
                    <Image Source="pack://application:,,,/Assets/Logo.png"
                           Height="34"
                           Stretch="Uniform"
                           Margin="0,0,8,0"/>
                </StackPanel>

                <!-- menu responsive -->
                <WrapPanel Grid.Column="1"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Left">

                    <Button x:Name="HomeButton"
                            Content="Home"
                            Style="{StaticResource TopMenuButtonStyle}"
                            Click="HomeButton_Click"/>

                    <Button x:Name="GeometryButton"
                            Content="Geometry"
                            Style="{StaticResource TopMenuButtonStyle}"
                            Click="GeometryButton_Click"/>

                    <Button x:Name="InventoryButton"
                            Content="Inventory"
                            Style="{StaticResource TopMenuButtonStyle}"
                            Click="InventoryButton_Click"/>

                </WrapPanel>

                <Grid Grid.Column="2" Width="8"/>
            </Grid>
        </Border>

        <!-- sub menu de geometria -->
        <Border Grid.Row="1"
                Background="{StaticResource ContentBackgroundBrush}"
                BorderBrush="#E6E6E6"
                BorderThickness="0,0,0,1"
                Padding="16,6"
                Visibility="{Binding ElementName=GeometrySubmenu, Path=Visibility}">
            <StackPanel x:Name="GeometrySubmenu"
                        Height="0"
                        Visibility="Collapsed"/>
        </Border>

        <!-- CONTENIDO -->
        <Border Grid.Row="2"
                Background="{StaticResource ContentBackgroundBrush}"
                Padding="2">
            <Border.Effect>
                <DropShadowEffect Color="Black"
                                  Opacity="0.12"
                                  BlurRadius="10"
                                  ShadowDepth="2"/>
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- header del modulo -->
                <Grid Grid.Row="0" Margin="0,0,0,12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0"
                            Background="{StaticResource OrangeBrush}"
                            Width="4"
                            Height="24"
                            Margin="0,0,10,0"
                            CornerRadius="2"/>

                    <TextBlock Grid.Column="1"
                               x:Name="ContentTitle"
                               Text="Home"
                               Style="{StaticResource ModuleTitleStyle}"/>
                </Grid>

                <!-- vistas: ahora ContentControl (no ScrollViewer) -->
                <ContentControl Grid.Row="1"
                                x:Name="ContentArea"
                                Margin="0"
                                HorizontalContentAlignment="Stretch"
                                VerticalContentAlignment="Stretch"/>

            </Grid>
        </Border>

        <!-- Status bar -->
        <Border Grid.Row="3"
                Background="#FAFAFA"
                BorderBrush="#DDDDDD"
                BorderThickness="1,1,0,0"
                Padding="12,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Hora -->
                <TextBlock Grid.Column="1"
                           x:Name="TimeText"
                           VerticalAlignment="Center"
                           FontSize="13"
                           Foreground="{StaticResource DarkGrayBrush}"
                           Margin="0,0,12,0"/>

                <!-- logo del footer -->
                <Image Grid.Column="2"
                       Source="pack://application:,,,/Assets/FooterLogo.png"
                       Height="26"
                       VerticalAlignment="Center"
                       Stretch="Uniform"/>
            </Grid>
        </Border>

        <!-- Toast Notification Overlay -->
        <controls:ToastNotificationControl Grid.RowSpan="4"
                                           Panel.ZIndex="1000"/>
    </Grid>
</Window>
